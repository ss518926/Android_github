<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Kugou.Widget.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/max_text_color</item>
        <item name="android:button">@drawable/btn_check</item>
    </style>

    <style name="Kugou.Widget.GridView" parent="@android:style/Widget.GridView">
        <item name="android:listSelector">@drawable/comm_grid_selector_bg</item>
    </style>

    <style name="MusicDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>